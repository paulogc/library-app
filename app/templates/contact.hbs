<div class="jumbotron text-center contact">
  <h1>Contact us</h1>

  <br/><br/>

  <p>Let a message for us</p>

  <div class="form-horizontal form-group form-group-lg">
    <div class="input-container row">
      <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-1 col-md-5 col-md-offset-2">
        {{input type="email" value=email class="form-control" placeholder="Please type your e-mail address." autofocus="autofocus"}}
      </div>
      <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-1 col-md-5 col-md-offset-2">
        {{textarea type="text" value=message class="form-control" placeholder="Type your message here." autofocus="autofocus"}}
      </div>
      <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-1 col-md-5 col-md-offset-2">
          <button disabled={{isDisabled}} {{action 'sendMessage' model}} class="btn btn-primary btn-lg btn-block">Send</button>
      </div>
    </div>
  </div>
  {{#if responseMessage}}
    <div class="alert alert-success">{{responseMessage}}</div>
  {{/if}}

   <br/><br/>
</div>